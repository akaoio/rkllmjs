{
  "name": "RKLLMJS README Generator Configuration",
  "version": "1.0.0",
  "description": "Configuration templates and settings for automatic README generation",
  
  "defaultTemplate": "readme-template.md",
  "customTemplates": [
    "module-template.md",
    "library-template.md",
    "component-template.md"
  ],
  
  "generator": {
    "templatePath": "configs/readme-template.md",
    "overwriteExisting": false,
    "verbose": true,
    "includeGeneratedDate": true,
    "includeSourceStats": true,
    "extractDocComments": true,
    "analyzeComplexity": true,
    "generateExamples": true,
    "includePerformanceNotes": true,
    "analyzeThreadSafety": true
  },
  
  "parsing": {
    "supportedLanguages": ["cpp", "hpp", "ts", "js"],
    "extractComments": true,
    "extractDependencies": true,
    "extractFunctions": true,
    "extractClasses": true,
    "extractExports": true,
    "extractIncludes": true,
    "extractNamespaces": true,
    "extractEnums": true,
    "extractStructs": true,
    "extractTemplates": true,
    "analyzeParameters": true,
    "analyzeReturnTypes": true,
    "extractDocstrings": true,
    "parseJSDoc": true,
    "analyzeFunctionComplexity": true
  },
  
  "content": {
    "inferPurpose": true,
    "generateDescription": true,
    "analyzeArchitecture": true,
    "extractFeatures": true,
    "generateUsageExamples": true,
    "analyzeErrorHandling": true,
    "documentPerformance": true,
    "analyzeThreadSafety": true,
    "documentMemoryManagement": true,
    "includeTestingInfo": true,
    "documentConfiguration": true,
    "includeTroubleshooting": true,
    "generateContributingGuidelines": true
  },
  
  "validation": {
    "requirePurpose": true,
    "requireMinimumFunctions": 1,
    "validateTemplateVariables": true,
    "checkFileExists": true,
    "requireDescription": true,
    "requireUsageExamples": true,
    "validateDocumentation": true
  },
  
  "output": {
    "encoding": "utf-8",
    "lineEnding": "lf",
    "includeTableOfContents": true,
    "markdownCompliance": "github-flavored",
    "codeHighlighting": true,
    "includeMetadata": true
  },
  
  "integration": {
    "validateScript": "scripts/validate.sh",
    "buildScript": "src/bindings/build.sh",
    "runOnBuild": false,
    "runOnValidation": true
  }
}