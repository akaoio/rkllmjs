{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false
  },
  "files": [
    "src/index.ts",
    "src/types.ts",
    "src/rkllm.ts",
    "src/core/ffi-manager.ts",
    "src/core/rkllm-universal.ts", 
    "src/core/universal-type-conversion.ts",
    "src/runtime/interfaces.ts",
    "src/ffi/symbol-definitions.ts"
  ]
}
